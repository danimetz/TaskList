<h1> Edit a Task!</h1>
<h2>
  <%= edit_task_path(@task.id) %>
</h2>

<%= form_with model: @task do |f| %>
  <p>Please update the fields you want to change update your task in the database:</p>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :due_date %>
  <%= f.text_field :due_date %>

  <%= f.submit "Save Task", class: "task-button" %>
<% end %>
