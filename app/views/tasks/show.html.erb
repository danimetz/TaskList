<% if @task.nil? %>
  <h1> 404 Not found</h1>

<% else %>

  <h1><%= @task.name %></h1>
  <h3><%= @task.description %></h3>
  <p><%= @task.completion_date %></p>

<div>
  <%= link_to "Edit #{@task.name}", edit_task_path(@task.id)%>
</div>

  <%= link_to "Delete #{@task.name}", task_path(@task.id), method: :delete %>
<% end %>
